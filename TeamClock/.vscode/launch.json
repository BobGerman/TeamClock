{
    "version": "1.0.0",
    "configurations": [
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "pwa-msedge",
            "url": "https://teams.microsoft.com/",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "https://teams.microsoft.com/",
            "webRoot": "${workspaceFolder}",
            "postDebugTask": "quitTeamsWindows"
        }
    ]
}